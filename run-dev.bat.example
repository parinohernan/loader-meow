@echo off
setlocal enabledelayedexpansion
REM Script para ejecutar la aplicación con variables de entorno de MySQL e IA
REM Copia este archivo a run-dev.bat y actualiza con tus credenciales

echo ========================================
echo   LOADER MEOW - DESARROLLO
echo ========================================
echo.

REM Configurar variables de entorno de MySQL
set DB_HOST=localhost
set DB_PORT=3306
set DB_USER=root
set DB_PASSWORD=tu_password_aqui
set DB_NAME=caricaloader
set DB_CHARSET=utf8mb4

REM Cargar variables de entorno de IA desde ai-config.env
if exist ai-config.env (
    echo Cargando configuracion de IA...
    for /f "usebackq eol=# delims== tokens=1,*" %%a in ("ai-config.env") do (
        if not "%%a"=="" if not "%%b"=="" (
            set "%%a=%%b"
            echo   - %%a configurado
        )
    )
    echo Configuracion de IA cargada
) else (
    echo ADVERTENCIA: ai-config.env no encontrado. El procesamiento con IA no estara disponible.
)

echo Configuracion MySQL:
echo - Host: %DB_HOST%
echo - Puerto: %DB_PORT%
echo - Usuario: %DB_USER%
echo - Base de datos: %DB_NAME%
echo.
echo ========================================
echo   INICIANDO APLICACION...
echo ========================================
echo.

REM Ejecutar la aplicación
wails dev
